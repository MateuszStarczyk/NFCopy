<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_new_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_new_card"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_lbl_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:labelFor="@id/et_card_id"
                android:text="@string/card_uuid"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/et_card_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/et_card_id" />

            <EditText
                android:id="@+id/et_card_id"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:importantForAutofill="no"
                android:inputType=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/et_card_name"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/tv_lbl_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="3dp"
                android:text="@string/card_class"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/tv_card_class"
                app:layout_constraintEnd_toStartOf="@+id/tv_card_class"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_card_class" />

            <TextView
                android:id="@+id/tv_card_class"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="24dp"
                android:autofillHints="@string/card_name"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/et_card_id"
                app:layout_constraintTop_toBottomOf="@+id/et_card_id" />


            <TextView
                android:id="@+id/tv_lbl_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="3dp"
                android:labelFor="@id/et_card_name"
                android:text="@string/card_name"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/et_card_name"
                app:layout_constraintEnd_toStartOf="@+id/et_card_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/et_card_name" />

            <EditText
                android:id="@+id/et_card_name"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:autofillHints="@string/card_name"
                android:inputType="textShortMessage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_lbl_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_card_class" />

            <TextView
                android:id="@+id/tv_lbl_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:labelFor="@id/btn_gallery"
                android:text="@string/iv_photo"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
                app:layout_constraintEnd_toEndOf="@+id/tv_lbl_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/linearLayout2" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_card_name">

                <ImageButton
                    android:id="@+id/btn_gallery"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="#8F000000"
                    android:contentDescription="@string/iv_photo"
                    android:scaleType="centerCrop"
                    android:scaleX="1"
                    android:scaleY="1"
                    app:srcCompat="@android:drawable/ic_menu_gallery" />

                <ImageButton
                    android:id="@+id/btn_camera"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="#8F000000"
                    android:contentDescription="@string/iv_photo"
                    android:scaleType="centerCrop"
                    android:scaleX="1"
                    android:scaleY="1"
                    app:srcCompat="@android:drawable/ic_menu_camera" />
            </LinearLayout>

            <com.mateuszstarczyk.nfcopy.ui.SquareImageView
                android:id="@+id/iv_preview"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/iv_photo"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout2"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_preview">

                <Button
                    android:id="@+id/btnCancel"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@android:string/cancel" />

                <Button
                    android:id="@+id/btnAdd"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/add" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <pl.bclogic.pulsator4droid.library.PulsatorLayout
        android:id="@+id/pulsator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pulse_color="@color/colorPrimaryDark"
        app:pulse_count="4"
        app:pulse_duration="3000"
        app:pulse_interpolator="Decelerate"
        app:pulse_repeat="0"
        app:pulse_startFromScratch="true">

    </pl.bclogic.pulsator4droid.library.PulsatorLayout>

    <ImageView
        android:id="@+id/iv_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/ic_wifi_description"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/pulsator"
        app:layout_constraintEnd_toEndOf="@+id/pulsator"
        app:layout_constraintStart_toStartOf="@+id/pulsator"
        app:layout_constraintTop_toTopOf="@+id/pulsator"
        app:srcCompat="@drawable/ic_wifi_tethering_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>